<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration>
    <!--<properties resource="conf/config.properties"/>-->
    <!-- 数据库驱动包位置 -->
    <classPathEntry
            location="D:\development\apache-maven-3.3.3\repository\mysql\mysql-connector-java\5.1.43\mysql-connector-java-5.1.43.jar"/>
    <context id="Mysql" targetRuntime="MyBatis3Simple" defaultModelType="flat">
        <!-- TKmybatis配置 -->
        <property name="javaFileEncoding" value="UTF-8"/>
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>
        <plugin type="tk.mybatis.mapper.generator.MapperPlugin">
            <property name="mappers" value="com.sun.fox.mybatis.base.bmapper.BaseDaoMapper"/>
        </plugin>
        <commentGenerator>
            <!-- 是否去除自动生成的注释 true：是 ： false:否 -->
            <property name="suppressAllComments" value="true"/>
            <!-- 是否生成注释代时间戳-->
            <property name="suppressDate" value="false"/>
        </commentGenerator>
        <!-- 数据库链接URL、用户名、密码 -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/demo?useUnicode=true"
                        userId="root"
                        password="root"/>
        <!-- 生成模型的包名和位置 -->
        <javaModelGenerator
                targetPackage="com.sun.fox.demo.server.foxdemoserver.demo.model"
                targetProject="d:/sunfox/fox-demo/fox-demo-server/src/main/java" >
                <!-- 设置一个根对象，
                如果设置了这个根对象，那么生成的keyClass或者recordClass会继承这个类；在Table的rootClass属性中可以覆盖该选项
                注意：如果在key class或者record class中有root class相同的属性，MBG就不会重新生成这些属性了，包括：
                    1，属性名相同，类型相同，有相同的getter/setter方法；
             -->
            <property name="rootClass" value="com.sun.fox.mybatis.base.model.BaseModel"/>
            <!-- 设置是否在getter方法中，对String类型字段调用trim()方法 -->
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <!-- 生成的映射文件包名和位置 -->
        <sqlMapGenerator
                targetPackage="com.sun.fox.demo.server.foxdemoserver.demo.mapper"
                targetProject="d:/sunfox/fox-demo/fox-demo-server/src/main/java"/>
        <!-- 生成接口类的包名和位置 -->
        <javaClientGenerator targetPackage="com.sun.fox.demo.server.foxdemoserver.demo.mapper"
                             targetProject="d:/sunfox/fox-demo/fox-demo-server/src/main/java"
                             type="XMLMAPPER"/>
        <!-- 要生成的那些表 -->
        <table tableName="demo_users" domainObjectName="DemoUsers"
               enableCountByExample="true" enableDeleteByExample="true"
               enableSelectByExample="true" enableUpdateByExample="true">
            <!--自生产主键 -->
            <!--<generatedKey column="bookmark_id" sqlStatement="Mysql"/> -->
            <!-- 忽略列，不生成bean 字段 -->
           <!-- <ignoreColumn column="FRED" />-->
            <!-- 指定列的java数据类型 -->
           <!-- <columnOverride column="LONG_VARCHAR_FIELD" jdbcType="VARCHAR" />-->
        </table>
    </context>
    <!-- mvn mybatis-generator:generate -->
</generatorConfiguration>